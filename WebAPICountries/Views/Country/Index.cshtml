

@model WebAPICountries.ViewModels.CountryViewModel

@*@{
    ViewData["Title"] = "Index";
}*@

<h1>Countries</h1>


<div class="row">
    <form asp-controller="Country" asp-action="GetSearch" method="get">
        <div class="input-group">
            <input class="form-control" asp-for="SearchTerm" placeholder="Enter a search term" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary" style="margin-right: 30px">Search</button>
            </div>
        </div>
    </form>

    <form asp-controller="Country" asp-action="GetFilter" method="get">
        <div class="input-group">
            <select class="form-control" asp-for="Filter" asp-items=" new SelectList(ViewBag.FilterOptions)"></select>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary" style="margin-right: 30px">Filter</button>
            </div>
        </div>
    </form>

    <form asp-controller="Country" asp-action="GetListSize" method="get">
        <div class="input-group">
            <select class="form-control" asp-for="ListSize" asp-items=" new SelectList(ViewBag.ListSize)"></select>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">List</button>
            </div>
        </div>
    </form>


</div>

    <hr />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Subregion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Capital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetCountry.Flag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Country)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subregion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capital)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Population)
                </td>
                <td>
                    <img src="@item.Flag" height=20 />
                </td>
               
            </tr>
        }
    </tbody>
</table>
